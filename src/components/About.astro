<script>
	// Show modal for the first experience
	document.getElementById('btn-1').addEventListener('click', function () {
		document.getElementById('modal-1').classList.remove('hidden');
	});

	// Show modal for the second experience
	document.getElementById('btn-2').addEventListener('click', function () {
		document.getElementById('modal-2').classList.remove('hidden');
	});

	// Close modal for the first experience (Read less)
	document.getElementById('readLessBtn1').addEventListener('click', function () {
		document.getElementById('modal-1').classList.add('hidden');
	});

	// Close modal for the second experience (Read less)
	document.getElementById('readLessBtn2').addEventListener('click', function () {
		document.getElementById('modal-2').classList.add('hidden');
	});
</script>
